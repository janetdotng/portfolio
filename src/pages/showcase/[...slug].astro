---
import DetailPostLayout from '../../layouts/DetailPostLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('showcase');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
  }));
}

const { slug } = Astro.params;
const entries = await getCollection('showcase');
const entry = entries.find((e) => e.slug === slug);

if (!entry) {
  throw new Error(`Showcase entry not found: ${slug}`);
}

const { Content } = await entry.render();

const SMALL_WORDS = new Set(['and','or','the','of','to','in','on','for','with','a','an']);

const titleCase = (s: string) =>
  s
    .replace(/[-_]/g, ' ')
    .replace(/([a-z])([A-Z])/g, '$1 $2')
    .split(' ')
    .filter(Boolean)
    .map((w, i) => {
      const lw = w.toLowerCase();
      if (i > 0 && SMALL_WORDS.has(lw)) return lw;
      return lw.charAt(0).toUpperCase() + lw.slice(1);
    })
    .join(' ');
---

<DetailPostLayout ...>
  <header class="post-header">
    <h1>{entry.data.title}</h1>
    {entry.data.intro && <p class="post-intro">{entry.data.intro}</p>}
    {/* optional: categories row here */}
  </header>

  <div class="post-grid">
    <main class="post-main">
	<div class="post-content">
      <Content />
	  </div>
    </main>

    <aside class="post-aside">
      {entry.data.client && (
        <div class="meta-block">
          <h4>Client</h4>
          <p>{entry.data.client}</p>
        </div>
      )}

      {entry.data.projectDate && (
        <div class="meta-block">
          <h4>Project Date</h4>
          <p>{entry.data.projectDate}</p>
        </div>
      )}

      {entry.data.category?.length ? (
  <div class="category-row">
    {entry.data.category.map(c => {
      const group = c.toLowerCase().replace(/[^a-z0-9]/g, '');
      return (
        <a class="cat-pill" href={`/showcase?group=${group}`}>
          {titleCase(c)}
        </a>
      );
    })}
  </div>
) : null}
    </aside>

  </div>
</DetailPostLayout>

<style>

.post-content :global(p) {
  line-height: 1.7;
  margin: 0 0 1.1em;
}

.post-content :global(h2) {
  margin: 2.2em 0 0.9em;
  text-align: center; /* if you want */
}

.post-content :global(h3) {
  margin: 1.8em 0 0.8em;
}

.post-content :global(figure),
.post-content :global(img) {
  margin: 1.8em auto;
  display: block;
  max-width: 100%;
}

.post-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 3rem;
}

.post-intro {
  font-size: 1.1rem;
  margin-bottom: 2rem;
}

.post-aside {
  border-left: 1px solid var(--color-700);
  padding-left: 1.5rem;
  font-size: 0.9rem;
}

.meta-block {
  margin-bottom: 2rem;
}

.meta-block h4 {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 0.5rem;
}

@media (max-width: 900px) {
  .post-grid {
    grid-template-columns: 1fr;
  }

  .post-aside {
    border-left: none;
    border-top: 1px solid var(--color-700);
    padding-top: 2rem;
    padding-left: 0;
  }
}
</style>