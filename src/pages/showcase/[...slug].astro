---
import { getEntryBySlug } from 'astro:content';
import DetailPostLayout from '../../layouts/DetailPostLayout.astro';

const { slug } = Astro.params;
const entry = await getEntryBySlug('showcase', slug);

if (!entry) throw new Error('Not found');

const { Content } = await entry.render();
---

<DetailPostLayout
  title={entry.data.title}
  description={entry.data.description}
>
  <div class="post-grid">

    <main class="post-main">
      <h1>{entry.data.title}</h1>

      {entry.data.intro && (
        <p class="post-intro">{entry.data.intro}</p>
      )}

      <Content />
    </main>

    <aside class="post-aside">
      {entry.data.client && (
        <div class="meta-block">
          <h4>Client</h4>
          <p>{entry.data.client}</p>
        </div>
      )}

      {entry.data.projectDate && (
        <div class="meta-block">
          <h4>Project Date</h4>
          <p>{entry.data.projectDate}</p>
        </div>
      )}

      {entry.data.tags && (
        <div class="meta-block">
          <h4>Tags</h4>
          <p>{entry.data.tags.join(', ')}</p>
        </div>
      )}
    </aside>

  </div>
</DetailPostLayout>

<style>
.post-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 3rem;
}

.post-intro {
  font-size: 1.1rem;
  margin-bottom: 2rem;
}

.post-aside {
  border-left: 1px solid var(--color-700);
  padding-left: 1.5rem;
  font-size: 0.9rem;
}

.meta-block {
  margin-bottom: 2rem;
}

.meta-block h4 {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 0.5rem;
}

@media (max-width: 900px) {
  .post-grid {
    grid-template-columns: 1fr;
  }

  .post-aside {
    border-left: none;
    border-top: 1px solid var(--color-700);
    padding-top: 2rem;
    padding-left: 0;
  }
}
</style>